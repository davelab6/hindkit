# -------------------
# BASIC SHAPING FORMS
# -------------------

# Akhand Ligatures
# ----------------

feature akhn {
  lookup akhn_chillu;
  lookup akhn_akhand;
  lookup akhn_conjuncts;
} akhn;


# Reph Forms
# ----------

